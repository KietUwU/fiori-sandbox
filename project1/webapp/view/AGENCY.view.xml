<mvc:View controllerName="fioriagency.project1.controller.AGENCY"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    xmlns="sap.ui.table">
    <m:Page id="page" title="{i18n>title}">
    <m:content>

        <Table
            id="agencyTable"
			rows="{mainView>/data}"
			selectionMode="MultiToggle"
			paste="onPaste"
			ariaLabelledBy="title">

			<extension>
				<m:OverflowToolbar id="_IDGenOverflowToolbar" style="Clear">
					<m:Title id="title" text="{i18n>agencyTitle}"/>

                    <m:ToolbarSpacer id="_IDGenToolbarSpacer1"/>

                    <m:Button id="_IDGenButton" 
                        type="Success"
                        text="{i18n>addButton}"
                        press=".onAddAgency"/>
                    <m:Button id="_IDGenButton1" 
                        type="Negative"
                        text="{i18n>delButton}"
                        press=".onDelAgency"/>

                    <m:ToolbarSeparator id="_IDGenToolbarSeparator"/>

                    <m:ToolbarSeparator id="_IDGenToolbarSeparator2" />

                    <m:Label id="_IDGenLabel2" text="{i18n>editButton}" />
                    <m:Switch id="_IDGenSwitch" state="false">
                        <m:layoutData>
                            <m:FlexItemData id="_IDGenFlexItemData" growFactor="1" />
                        </m:layoutData>
                    </m:Switch>

				</m:OverflowToolbar>
			</extension>
            
			<columns>
				<Column id="_IDGenColumn" width="11rem">
					<m:Label id="_IDGenLabel" text="Agency ID" />
					<template>
						<m:Text id="_IDGenText" text="{mainView>AGENCYID}" wrapping="false" />
					</template>
				</Column>
                
				<Column id="_IDGenColumn1" width="11rem">
					<m:Label id="_IDGenLabel1" text="Agency Name" />
					<template>
                        <m:Text id="_IDGenText1" text="{mainView>NAME}" wrapping="false" />
					</template>
				</Column>

                <Column width="11rem">
					<m:Label text="Street" />
					<template>
                        <m:Text text="{mainView>STREET}" wrapping="false" />
					</template>
				</Column>

                <Column width="11rem">
					<m:Label text="Postal Code" />
					<template>
                        <m:Text text="{mainView>POSTALCODE}" wrapping="false" />
					</template>
				</Column>

                <Column width="11rem">
					<m:Label text="City" />
					<template>
                        <m:Text text="{mainView>CITY}" wrapping="false" />
					</template>
				</Column>
                
                <Column width="11rem">
					<m:Label text="Country" />
					<template>
                        <m:Text text="{mainView>COUNTRYCODE}" wrapping="false" />
					</template>
				</Column>

                <Column width="11rem">
					<m:Label text="Phone Number" />
					<template>
                        <m:Text text="{mainView>PHONENUMBER}" wrapping="false" />
					</template>
				</Column>
			</columns>
			</Table>
        </m:content>
    </m:Page>
</mvc:View>